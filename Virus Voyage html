<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Virus Voyage (Short)</title>
  <style>
    :root{--bg:#071421;--card:#0b2940;--accent:#31d0aa;--danger:#ff5c5c}
    *{box-sizing:border-box;font-family:Inter,system-ui,Segoe UI,Arial}
    body{margin:0;background:linear-gradient(180deg,var(--bg),#02121a);color:#e6f7f2;display:flex;align-items:center;justify-content:center;height:100vh}
    .game{width:360px;background:linear-gradient(180deg,rgba(255,255,255,0.02),transparent);border-radius:12px;padding:14px;box-shadow:0 10px 30px rgba(2,20,30,0.6)}
    h1{margin:0 0 8px;font-size:18px;text-align:center}
    .hud{display:flex;gap:8px;justify-content:space-between;margin-bottom:8px}
    .panel{background:rgba(255,255,255,0.03);padding:8px;border-radius:8px;min-width:80px;text-align:center}
    #arena{background:linear-gradient(135deg,#092e36,#02121a);height:280px;border-radius:8px;position:relative;overflow:hidden;border:1px solid rgba(255,255,255,0.03)}
    .virus{position:absolute;border-radius:50%;width:36px;height:36px;display:flex;align-items:center;justify-content:center;font-weight:700;color:#071421;user-select:none}
    .v1{background:var(--accent);}
    .v2{background:#ffd166;color:#1b1b1b}
    .btn{display:block;width:100%;margin-top:10px;padding:8px;border-radius:8px;border:0;background:var(--accent);color:#022;cursor:pointer;font-weight:600}
    .small{font-size:12px;opacity:0.9}
    footer{margin-top:8px;text-align:center;font-size:12px;color:#9fd9c7}
  </style>
</head>
<body>
  <div class="game">
    <h1>Virus Voyage</h1>

    <div class="hud">
      <div class="panel">Score<br><span id="score">0</span></div>
      <div class="panel">Time<br><span id="time">30</span>s</div>
      <div class="panel">Lives<br><span id="lives">3</span></div>
    </div>

    <div id="arena"></div>

    <button id="start" class="btn">Start Voyage</button>
    <div class="small" style="margin-top:6px">Click viruses to eliminate them. Bigger viruses give more points.</div>
    <footer>Short demo â€¢ Good luck!</footer>
  </div>

  <script>
    const arena = document.getElementById('arena');
    const startBtn = document.getElementById('start');
    const scoreEl = document.getElementById('score');
    const timeEl = document.getElementById('time');
    const livesEl = document.getElementById('lives');

    let score=0,timeLeft=30,lives=3,intervalId,spawnId,running=false;

    function rand(min,max){return Math.random()*(max-min)+min}

    function spawnVirus(){
      const v = document.createElement('div');
      const size = Math.random()>0.8?56: (Math.random()>0.7?44:36);
      v.className='virus '+(size>50? 'v2':'v1');
      v.style.width = size+'px'; v.style.height = size+'px';
      v.textContent = size>50? 'X':'V';
      const x = rand(0, arena.clientWidth - size);
      const y = rand(0, arena.clientHeight - size);
      v.style.left = x+'px'; v.style.top = y+'px';
      arena.appendChild(v);

      const vx = rand(-0.8,0.8), vy = rand(-0.8,0.8);
      let life = 0;
      function step(){
        if(!v.parentElement) return;
        life++;
        let nx = parseFloat(v.style.left)+vx*(1+size/40);
        let ny = parseFloat(v.style.top)+vy*(1+size/40);
        if(nx<0 || nx>arena.clientWidth-size) nx = Math.min(Math.max(nx,0), arena.clientWidth-size), v.style.left = nx+'px';
        if(ny<0 || ny>arena.clientHeight-size) ny = Math.min(Math.max(ny,0), arena.clientHeight-size), v.style.top = ny+'px';
        v.style.left = nx+'px'; v.style.top = ny+'px';
        if(life<300) requestAnimationFrame(step);
      }
      requestAnimationFrame(step);

      v.addEventListener('click', e=>{
        e.stopPropagation();
        const pts = size>50? 30 : (size>40? 15:10);
        score += pts; scoreEl.textContent = score;
        v.remove();
        // small burst
        const burst = document.createElement('div');
        burst.textContent = '+'+pts; burst.style.position='absolute'; burst.style.left=v.style.left; burst.style.top=v.style.top; burst.style.fontSize='12px'; burst.style.opacity=1;
        arena.appendChild(burst);
        let t=0; function b(){ t+=1; burst.style.top = (parseFloat(burst.style.top)-0.8)+'px'; burst.style.opacity = 1 - t/30; if(t<30) requestAnimationFrame(b); else burst.remove(); } requestAnimationFrame(b);
      });

      // if virus remains too long, it hurts player
      setTimeout(()=>{ if(v.parentElement){ v.remove(); lives--; livesEl.textContent = lives; if(lives<=0) endGame(); } }, rand(3500,7000));
    }

    function startGame(){
      if(running) return; running=true; score=0; timeLeft=30; lives=3;
      scoreEl.textContent=0; timeEl.textContent=timeLeft; livesEl.textContent=lives;
      arena.innerHTML='';
      intervalId = setInterval(()=>{
        timeLeft--; timeEl.textContent=timeLeft; if(timeLeft<=0) endGame();
      },1000);
      spawnId = setInterval(spawnVirus, 700);
      // initial burst
      for(let i=0;i<4;i++) setTimeout(spawnVirus, i*200);
    }

    function endGame(){
      running=false; clearInterval(intervalId); clearInterval(spawnId);
      // remove remaining viruses
      arena.querySelectorAll('.virus').forEach(v=>v.remove());
      // show result overlay
      const msg = document.createElement('div');
      msg.style.position='absolute'; msg.style.inset='0'; msg.style.display='flex'; msg.style.alignItems='center'; msg.style.justifyContent='center'; msg.style.background='linear-gradient(180deg,rgba(2,10,12,0.6),rgba(2,10,12,0.8))';
      msg.innerHTML = `<div style="background:#062733;padding:18px;border-radius:10px;text-align:center;min-width:220px"><h2 style=\"margin:0 0 6px\">Voyage over</h2><div style=\"margin-bottom:8px\">Score: ${score}</div><button id=\"again\" style=\"padding:8px 12px;border-radius:8px;border:0;background:var(--accent);font-weight:600;cursor:pointer\">Play again</button></div>`;
      arena.appendChild(msg);
      document.getElementById('again').addEventListener('click', ()=>{ msg.remove(); startGame(); });
    }

    startBtn.addEventListener('click', startGame);
    // click arena to penalize slightly (simulate getting infected)
    arena.addEventListener('click', ()=>{ if(!running) return; lives = Math.max(0,lives-1); livesEl.textContent = lives; if(lives<=0) endGame(); });

    // make responsive on resize
    window.addEventListener('resize', ()=>{});
  </script>
</body>
</html>

